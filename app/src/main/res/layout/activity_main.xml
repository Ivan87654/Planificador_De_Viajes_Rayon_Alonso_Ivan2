<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout principal de la aplicaciÃ³n.
    Contiene un RecyclerView para mostrar la lista de viajes.
    Se usa ConstraintLayout como layout principal
-->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/fragmentCabecera"
        android:name="es.ies.claudiomoyano.dam2.pmdm.planificador_de_viajes_rayon_alonso_ivan.FragmentCabecera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/contenedorFragmentDinamico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <!--
        RecyclerView donde se muestran los viajes.-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_viajes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>