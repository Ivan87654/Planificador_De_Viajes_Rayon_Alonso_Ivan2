<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout para mostrar los detalles de un viaje.-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenedor principal en columna -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="50dp">

        <!-- Imagen grande del viaje seleccionado -->
        <ImageView
            android:id="@+id/img_portada_detalle"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/desc_imagen_viaje" />

        <!-- Título del viaje -->
        <TextView
            android:id="@+id/txt_titulo_detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/titulo_viaje" />

        <!-- Fecha del viaje -->
        <TextView
            android:id="@+id/txt_fecha_detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/fecha_salida" />

        <!-- Descripción completa del viaje -->
        <TextView
            android:id="@+id/txt_descripcion_detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:text="Descripción del viaje" />

    </LinearLayout>
</ScrollView>