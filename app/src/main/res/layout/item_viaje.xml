<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout de un elemento de la lista.-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="8dp">

    <!-- Contenedor horizontal para imagen + texto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Imagen del viaje dentro de la tarjeta -->
        <ImageView
            android:id="@+id/img_portada_item"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/desc_imagen_viaje" />

        <!-- Contenedor vertical para título y fecha -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <!-- Título del viaje -->
            <TextView
                android:id="@+id/txt_titulo_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titulo_viaje"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Fecha del viaje -->
            <TextView
                android:id="@+id/txt_fecha_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fecha_salida"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>